.el-title {
  height:100rpx;
  line-height: 100rpx;
  font-size: 16px;
  color: #282828;
  background: #fff;
  padding: 0 0.18rem;
  background: linear-gradient(top, #9cd684 0%, #a8de92 100%);
}

.el-wrap {
  background: #f2f2f2;
  padding: 18rpx;
}

.el-item {
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 5px;
}

.el-item-l {
  width: 240rpx;
  height: 100%;
}

.el-item-l image {
  width: 100%;
  height: 100%;
  border-radius: 5px 0 0 5px;
}

.el-item-r {
  width: auto;
  padding: 18rpx;
}

.el-item-r div {
  width: 100%;
  font-size: 20px;
  border-radius: 0 5px 5px 0;
  height: 60rpx;
  line-height: 60rpx;
}
.el-item-r .teacherName {
  font-size: 16px;
  color: #5e5e5e;
  margin-top: 10rpx;
}
.el-item-r .courseName {
  font-size: 14px;
  color: #282828;
}

.el-item-r .publicTime {
  font-size: 14px;
  color: #5e5e5e;
  margin-top: 10rpx;
}
